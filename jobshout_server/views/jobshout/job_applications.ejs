function draw_content_html (aaData) {
	var contentHtml="";
	$.each(aaData, function(i,row){
		var cv_content_str= '';
		if(row.cv_content){
			cv_content_str = row.cv_content;
			if(cv_content_str.length>250){
				cv_content_str = cv_content_str.substr(0, 250)+'...';
			}
		}
		if(searchStr!=''){
			var tempSearchStr=searchStr;
			var searchRegex = new RegExp(' ', "gi");
    		tempSearchStr = tempSearchStr.replace(searchRegex, '|');

			var regex = new RegExp(tempSearchStr, "gi");
    		cv_content_str = cv_content_str.replace(regex, function returnHighlightedString(x){return '<span class="highlighttxt">'+x+'</span>';});
		}
		contentHtml+='<tr><td>'+row.name+'</td><td>'+row.email_address+'</td><td>'+row.contact_number+'</td><td>'+dateTimeFromUnix(row.modified)+'</td><td>'+cv_content_str+'</td><td><a href="'+backendDirectory+'/download/'+row.uploaded_file_uuid+'" target="_blank"><i class="fa fa-download"></i> '+row.uploaded_file_name+'</a></td><td><a href="'+backendDirectory+'/job_application?_id='+row._id+'" target="_blank"><i class="fa fa-pencil"></i></a></td></tr>';
	});
	return contentHtml;
}

</script>
