<% include include/main-header  %>

<% 
var currentPageNum= 1;
if (typeof currentPage !== 'undefined' && currentPage !== null) {
	currentPageNum=currentPage;
}

var keywordStr="";
if (typeof searched_keyword !== 'undefined' && searched_keyword !== null) {
	keywordStr=searched_keyword;
}
%>
<!-- page specific css -->
    <link rel="stylesheet" type="text/css" href="jobshout_assets/plugins/responsive-table/basictable.css" />
</head>
<body>
	<!-- navbar top -->
   	<div class="wrapper">
   		<!-- Header Starts here-->
  		<% include include/header %>
  		<!-- Header Ends here-->
  		
  		<div class="content" >
  			<!-- Sidebar Starts Here-->
  			<% include include/sidebar %>
    		<!-- Sidebar Ends Here-->
    		
    		<section>
      			<article>
      				<div id="page-wrapper">
        				<div class="row">
       						<!-- Page Header -->
        					<div class="col-lg-12">
								<div  CLASS="hidden-xs sidemenu"> <button id="menu" CLASS="btn btn-sm btn-danger" title="Menu"><i class="fa fa-bars fa-2x"></i></button></div>
        						<h1 class="page-header">Web Routes</h1>
        					</div>
       						<!--End Page Header -->
        				</div>
						<div CLASS="visible-xs">
							<div CLASS="row">
								<div CLASS="col-lg-6 col-sm-12 col-xs-12">
									<div>
										<form class="form-inline" method="get" action="">                 	          
                 	 						<input class="form-control xs-margin-btm10" value="<%= keywordStr %>" required id="smallSearchField" placeholder="Search..." type="text">
                     						<a href="/<%= backendDirectory %>/web_route" class="btn palette-carrot btn-color btn-icon-left btn-sm btn-block" > <i class="fa fa-plus"></i>Add New web route</a>  
                  						</form>
									</div>
								</div>
							</div>
						</div>	   
						<div class="clearfix hidden-xs">
      						<div class="form-group no-margin">
     							<div class="pull-right-sm-scr margin-bottom-10 ">
									<div  class="form-inline">                 	          
                 						<div class="btn-inline display-inline-block">
											<input type="text" class="form-control padding-left-35" value="<%= keywordStr %>" style="min-width:225px;" required id="searchField" placeholder="Search here...">
											<button class="btn btn-left-align btn-link no-shadow bg-transparent no-padding-top padding-right-10 right-auto left" type="button" id="searchBtn"><i class="glyphicon glyphicon-search"></i></button>
										</div>
                                        
                                        <a href="/<%= backendDirectory %>/web_route" class="btn palette-carrot btn-color btn-icon-left btn-sm" > <i class="fa fa-plus"></i>Add New web Route</a>    
                  					</div>
         						</div>
      						</div>
     					</div>
    
 						<div class="row">
            				<div class="col-sm-12">
           						<div class="table-responsive">
           						<%	if (document_details.length>0) {	%>
      							
                                <table class="table table-striped  table-bordered table-hover custom-tbl-st bt" id="table-breakpoint">
                                    <thead>
                                        <tr>
                                            <th class="col-lg-2">Table</th>
                                            <th class="col-lg-2">URL</th>
                                             <th>Last Modified</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                     <tfoot>
                                        <tr>
                                           <th class="col-lg-2">Table</th>
                                            <th class="col-lg-2">URL</th>
                                             <th>Last Modified</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    	<% for(var i=0; i<document_details.length; i++) {	%>
                                        <tr>
                                        	<td><%= document_details[i].table_selected %></td>
                                        	<td><%= document_details[i].route_url %></td>
                                        	<td><%	if (document_details[i].Modified) {	%>
                                        	<%= timeConverter(document_details[i].Modified) %>
                                        	<%	} 	%>
                                        	</td>
                                            <td>
                                            	<%	if (document_details[i].Status==1) {	%>
                                            	<span class="label label-success">Active</span>
                                            	<%	}else{ 	%>
                                            	<span class="label label-success">Inactive</span>
                                            	<%	} 	%>
                                            </td>
                                            <td class="actions-list"><a href="/<%= backendDirectory %>/web_route?id=<%= document_details[i]._id %>" title="Edit token"><i class="fa fa-pencil"></i></a></td>
                                        </tr>
                                        <%	} 	%>
                                    </tbody>
                                </table>
                                <%	} else { %>
									<div class="alert alert-danger alert-dismissable">
             							<button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
             							Sorry, no results found!
            						</div>
            					<%	} 	%>
                            </div>
          				</div>
					</div>
					<!-- pagination Starts Here-->
						<% include include/pagination %>
					<!-- pagination Ends Here-->
  				</article>
    		</section>
    		<!--//body content--> 
  		</div>
  		<!--//Main Content--> 
	</div>

<!-- Footer Starts Here-->
	<% include include/footer %>
<!-- Footer Ends Here-->
 <script type="text/javascript" src="jobshout_assets/plugins/responsive-table/jquery.basictable.min.js"></script>
  <script type="text/javascript">
    function searchKeyword(e){
		var searchField= $("#"+e).val();
		if(searchField!=""){
			window.location.href= '<%= currentUrl %>?page=<%= currentPageNum %>&keyword='+searchField;
			$("#"+e).removeClass("errorPlaceHolder");
		}else{
			$("#"+e).addClass("errorPlaceHolder");
			$("#"+e).attr("placeholder" , "Please enter search term here");
			$("#"+e).focus();
		}
	}
	
    $(document).ready(function() {
      	$('#table').basictable();
	  	$('#table-breakpoint').basictable({
        	breakpoint: 751
     	});
		
		$("#searchBtn").click(function()	{
			searchKeyword('searchField');
		});
		
		
		$('#searchField').keypress(function (e) {
  			if (e.which == 13) {
    			searchKeyword('searchField');
  			}
		});
	});
</script>
</body>
</html>