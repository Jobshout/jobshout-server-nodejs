	var item_target=$("#item_target").val();
	var item_active=$("#item_active").val();
	var item_query_string=$("#item_query_string").val();
	
	if(item_label!="" && (item_link!="" || item_related_doc!="")){
		
		var itemStatus="Inactive";
		if(item_active==1){
			itemStatus="Active";
		}
